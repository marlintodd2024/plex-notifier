# ===========================================
# BingeAlert - Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ------ Database ------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=notifications
DB_USER=notifyuser
DB_PASSWORD=CHANGE_ME_secure_password

# ------ SMTP Email ------
# Gmail: smtp.gmail.com:587 (requires App Password)
# Outlook: smtp.office365.com:587
# SMTP2GO: mail.smtp2go.com:2525
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=BingeAlert <your_email@gmail.com>

# ------ Seerr (Jellyseerr / Overseerr) ------
JELLYSEERR_URL=http://192.168.1.100:5055
JELLYSEERR_API_KEY=your_seerr_api_key

# ------ Sonarr (TV Shows) ------
SONARR_URL=http://192.168.1.100:8989
SONARR_API_KEY=your_sonarr_api_key

# ------ Radarr (Movies) ------
RADARR_URL=http://192.168.1.100:7878
RADARR_API_KEY=your_radarr_api_key

# ------ Plex Media Server (optional) ------
PLEX_URL=http://192.168.1.100:32400
PLEX_TOKEN=your_x_plex_token

# ------ Application ------
APP_SECRET_KEY=CHANGE_ME_random_string_here
ADMIN_EMAIL=admin@example.com

# ------ Notification Timing ------
NOTIFICATION_INITIAL_DELAY_MIN=7
NOTIFICATION_EXTENSION_DELAY_MIN=3
NOTIFICATION_MAX_WAIT_MIN=15
NOTIFICATION_CHECK_FREQUENCY_SEC=60

# ------ Quality Monitor ------
QUALITY_MONITOR_ENABLED=true
QUALITY_MONITOR_INTERVAL_HOURS=24
QUALITY_WAITING_DELAY_SECONDS=300

# ------ Issue Auto-Fix ------
# manual  = Admin reviews issues in dashboard first
# auto    = Blacklist & re-search automatically
# auto_notify = Auto-fix and email admin about it
ISSUE_AUTOFIX_MODE=manual
